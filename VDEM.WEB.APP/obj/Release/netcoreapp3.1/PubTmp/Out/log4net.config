<log4net>
	
	<root>
		<level value="ALL"></level>
		<appender-ref ref="FileAppender" />
	</root>
	
	<!-- writing logs into text file -->
	<appender name="FileAppender" type="log4net.Appender.RollingFileAppender">
		<file type="log4net.Util.PatternString" value="C:\VDEM\VDEMLogs\\VDEM_WEB_LOG_%date{yyyyMMdd}.log"/>

		<appendToFile value="true"/>
		<rollingStyle value="Date"/>
		<datePattern value="yyyyMMdd"/>
		<maximumFileSize value="3MB" />
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date|%-5thread|%-5level|%-35logger{1}|%-35M|%message%newline"/>
      <!--<conversionPattern value="%-5thread|%-5level|%-35logger{1}|%-35M|%message%newline"/>-->
		</layout>
	</appender>
	
</log4net>